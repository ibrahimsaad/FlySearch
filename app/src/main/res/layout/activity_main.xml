<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.search.SearchActivity"
    >

  <include layout="@layout/fly_app_toolbar"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        tools:context=".presentation.search.SearchActivity"
        >

      <androidx.appcompat.widget.AppCompatAutoCompleteTextView
          android:id="@+id/origin_airport"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:background="@drawable/border"
          android:hint="@string/origin"
          android:padding="16dp"
          android:textSize="18sp"
          />

      <androidx.appcompat.widget.AppCompatAutoCompleteTextView
          android:id="@+id/destination_airport"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/origin_airport"
          android:layout_marginTop="16dp"
          android:background="@drawable/border"
          android:hint="@string/destination"
          android:padding="16dp"
          android:textSize="18sp"
          />

      <LinearLayout
          android:id="@+id/pick_departure_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/destination_airport"
          android:layout_marginTop="16dp"
          android:background="@drawable/border"
          android:clickable="true"
          android:focusable="true"
          android:padding="14dp"
          >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_date_range_black_24dp"
            android:tint="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/departure_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="@string/pick_departure_date"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/other_data"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/pick_departure_date"
          android:layout_marginTop="16dp"
          android:background="@drawable/border"
          android:clickable="true"
          android:focusable="true"
          android:orientation="horizontal"
          android:padding="14dp"
          android:paddingEnd="14dp"
          android:paddingStart="14dp"
          android:paddingTop="10dp"
          >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.MaterialComponents.TextInputLayout"
            >

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/adult"
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:hint="Adult"
              android:inputType="number"
              android:text="1"
              android:textSize="14sp"
              style="@style/Base.Widget.MaterialComponents.TextInputLayout"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.MaterialComponents.TextInputLayout"
            >

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/child"
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:hint="child"
              android:inputType="number"
              android:text="0"
              android:textSize="14sp"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.MaterialComponents.TextInputLayout"
            >
          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/infant"
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:hint="Infant"
              android:inputType="number"
              android:text="0"
              android:textSize="14sp"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/cabin_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            />
      </LinearLayout>

      <com.google.android.material.button.MaterialButton
          android:id="@+id/search_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/other_data"
          android:layout_centerHorizontal="true"
          android:layout_margin="16dp"
          android:padding="8dp"
          android:text="@string/search"
          style="@style/Widget.MaterialComponents.Button.OutlinedButton"
          />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/flights_recycler"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/search_button"
          android:layout_margin="8dp"
          tools:listitem="@layout/item_flight"
          tools:orientation="horizontal"
          tools:scrollbars="horizontal"
          />
    </RelativeLayout>
  </ScrollView>
</LinearLayout>
