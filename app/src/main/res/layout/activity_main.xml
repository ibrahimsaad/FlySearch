<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.search.SearchActivity"
    >

  <include layout="@layout/fly_app_toolbar"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="8dp"
      android:orientation="vertical"
      tools:context=".presentation.search.SearchActivity"
      >

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/origin_airport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:hint="@string/origin"
        android:padding="16dp"
        android:textSize="18sp"
        />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/destination_airport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/origin_airport"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:hint="@string/destination"
        android:padding="16dp"
        android:textSize="18sp"
        />

    <LinearLayout
        android:id="@+id/pick_departure_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_below="@id/destination_airport"
        android:clickable="true"
        android:layout_marginTop="16dp"
        android:focusable="true"
        android:padding="14dp"
        >
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_date_range_black_24dp"
          android:tint="@color/colorPrimaryDark"
          />
      <TextView
          android:id="@+id/departure_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="8dp"
          android:text="@string/pick_departure_date"
          android:textAppearance="@style/TextAppearance.AppCompat.Body1"
          android:textSize="18sp"
          />
    </LinearLayout>

  </RelativeLayout>
</LinearLayout>
